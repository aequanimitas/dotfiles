# terminal navigation with less keystrokes
# shamelessly ripped from https://github.com/mathiasbynens

alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."

# shortcut to list also hidden files
alias lsh="ls -la"

# this is awesome, thx!
#alias timer="echo 'Timer started. Stop with Ctrl-D.' && date && time cat && date

# stick mvim to terminal
alias mvim="/usr/local/bin/mvim -v"

# tmux color
alias tmux="TERM=screen-256color-bce tmux"

# edit hosts file
alias changehosts="sudo vi /etc/hosts"

# Chrome and most visited urls
alias IncognitoChrome="open -a ~/Applications/Google\ Chrome.app --args -incognito"
alias IncognitoGmai="IncognitoChrome gmail.com"

# tmux color
alias tmux="TERM=screen-256color-bce tmux"

# stick mvim to terminal
alias mvim="/usr/local/bin/mvim -v"

# edit hosts file
alias changehosts="sudo vi /etc/hosts"
alias changehosts-work="sudo cp /etc/hosts.workmode /etc/hosts"
alias changehosts-relax="sudo cp /etc/hosts.relax /etc/hosts"

# serve ruby-doc via python simple-server
alias rubydocpy="cd ~/Documents/ruby_2_0_stdlib/ && python -m SimpleHTTPServer 20000 &"
